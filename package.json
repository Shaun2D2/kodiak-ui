{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "docs:dev": "yarn workspace @kodiak/docs dev",
    "docs:build": "yarn workspace @kodiak/docs build",
    "docs:serve": "yarn workspace @kodiak/docs serve"
  },
  "devDependencies": {
    "husky": "^4.0.9",
    "jest": "^24.9.0",
    "lerna": "^3.18.4",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "precommit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testMatch": [
      "**/packages/**/test/*.js"
    ],
    "collectCoverageFrom": [
      "**/packages/**/src/*.js"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ]
  }
}
